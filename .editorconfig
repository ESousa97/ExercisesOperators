# EditorConfig - Consistent coding style across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Java
[*.java]
indent_size = 4

# XML (pom.xml, etc.)
[*.xml]
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Properties
[*.properties]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
